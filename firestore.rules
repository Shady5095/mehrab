rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && isOwner(userId);

      // Users can update their own profile (but not role)
      allow update: if isAuthenticated() &&
                      isOwner(userId) &&
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);

      // Only authenticated users can create their profile during registration
      allow create: if isAuthenticated() && isOwner(userId);

      // Users cannot delete their own profile
      allow delete: if false;
    }

    // Calls collection
    match /calls/{callId} {
      // Users can read calls they are part of
      allow read: if isAuthenticated() &&
                    (resource.data.callerId == request.auth.uid ||
                     resource.data.receiverId == request.auth.uid);

      // Users can create calls if they are the caller
      allow create: if isAuthenticated() &&
                      request.resource.data.callerId == request.auth.uid;

      // Users can update calls they are part of (to answer/decline/end)
      allow update: if isAuthenticated() &&
                      (resource.data.callerId == request.auth.uid ||
                       resource.data.receiverId == request.auth.uid);

      // Calls can be deleted by participants after 24 hours
      allow delete: if isAuthenticated() &&
                      (resource.data.callerId == request.auth.uid ||
                       resource.data.receiverId == request.auth.uid) &&
                      request.time > resource.data.createdAt + duration.value(24, 'h');
    }

    // Teachers collection
    match /teachers/{teacherId} {
      // Anyone authenticated can read teacher profiles
      allow read: if isAuthenticated();

      // Only the teacher themselves can update their profile
      allow update: if isAuthenticated() && isOwner(teacherId);

      // Teachers can be created by authenticated users
      allow create: if isAuthenticated() &&
                      hasRole('teacher') &&
                      isOwner(teacherId);

      // Teachers cannot be deleted
      allow delete: if false;
    }

    // Students collection
    match /students/{studentId} {
      // Teachers and the student themselves can read student profiles
      allow read: if isAuthenticated() &&
                    (hasRole('teacher') || isOwner(studentId));

      // Only the student themselves can update their profile
      allow update: if isAuthenticated() && isOwner(studentId);

      // Students can be created by authenticated users
      allow create: if isAuthenticated() &&
                      hasRole('student') &&
                      isOwner(studentId);

      // Students cannot be deleted
      allow delete: if false;
    }

    // Sessions collection
    match /sessions/{sessionId} {
      // Participants can read session data
      allow read: if isAuthenticated() &&
                    (resource.data.teacherId == request.auth.uid ||
                     resource.data.studentId == request.auth.uid);

      // Teachers can create sessions
      allow create: if isAuthenticated() &&
                      hasRole('teacher') &&
                      request.resource.data.teacherId == request.auth.uid;

      // Participants can update session data
      allow update: if isAuthenticated() &&
                      (resource.data.teacherId == request.auth.uid ||
                       resource.data.studentId == request.auth.uid);

      // Sessions cannot be deleted
      allow delete: if false;
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isAuthenticated() &&
                    resource.data.userId == request.auth.uid;

      // System can create notifications (via backend)
      allow create: if isAuthenticated();

      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() &&
                      resource.data.userId == request.auth.uid;

      // Users can delete their own notifications
      allow delete: if isAuthenticated() &&
                      resource.data.userId == request.auth.uid;
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone authenticated can read reviews
      allow read: if isAuthenticated();

      // Students can create reviews for their teachers
      allow create: if isAuthenticated() &&
                      hasRole('student') &&
                      request.resource.data.studentId == request.auth.uid;

      // Students can update their own reviews
      allow update: if isAuthenticated() &&
                      resource.data.studentId == request.auth.uid;

      // Students can delete their own reviews
      allow delete: if isAuthenticated() &&
                      resource.data.studentId == request.auth.uid;
    }

    // Favorite students collection
    match /favoriteStudents/{favoriteId} {
      // Teachers can read their own favorites
      allow read: if isAuthenticated() &&
                    resource.data.teacherId == request.auth.uid;

      // Teachers can add students to favorites
      allow create: if isAuthenticated() &&
                      hasRole('teacher') &&
                      request.resource.data.teacherId == request.auth.uid;

      // Teachers can remove students from favorites
      allow delete: if isAuthenticated() &&
                      resource.data.teacherId == request.auth.uid;

      // No updates needed for favorites
      allow update: if false;
    }

    // Prayer times collection (read-only public data)
    match /prayerTimes/{cityId} {
      allow read: if true; // Public data
      allow write: if false; // Only backend can write
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
